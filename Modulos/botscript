        }
   if [[ "$(grep -w "${message_from_username}" $ativos | grep -wc 'revenda')" != '0' ]]; then
    local msg
        msg="‚óè‚óè‚óè‚óè‚óè SCRIPT SSH PRO MAX ‚óè‚óè‚óè‚óè‚óè\n"
        msg+="‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨\n"
        msg+=" ‚úåÔ∏èOLA <b>${message_from_first_name[$id]}</b>, BEM VINDO! ‚úåÔ∏è\n"
        msg+="‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨‚ñ¨\n"
